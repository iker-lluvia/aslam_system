<!-- Launch file for reconstruction 3D planner -->
<launch>
    
  <!-- RGB-D Camera -->
  <include file="$(find aslam_bringup)/launch/realsense/rs_d435.launch">
	<arg name="align_depth" value="true"/>
  </include>/>
  
  <!-- Visual localisation -->
  <node name="orb_slam3_rbgd" pkg="orb_slam3_ros_wrapper" type="orb_slam3_ros_wrapper_rgbd" output="screen">
    <remap from="/camera/rgb/image_raw"                 to="/camera/color/image_raw"/>
    <remap from="/camera/depth_registered/image_raw"    to="/camera/aligned_depth_to_color/image_raw"/>

    <param name="voc_file"      type="string"   value="$(find aslam_bringup)/launch/orb_slam/config/ORBvoc.txt" />
    <param name="settings_file" type="string"   value="$(find aslam_bringup)/launch/orb_slam/config/D435.yaml" />

    <param name="world_frame_id"    type="string"   value="world" />
    <param name="cam_frame_id"      type="string"   value="camera_link" />
  </node>

  <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server_orb_slam3" output="screen" ns="orb_slam3_ros" >
    <param name="/target_frame_name" value="/world" />
    <param name="/source_frame_name" value="/camera_link" />
    <param name="/trajectory_update_rate" value="20.0" />
    <param name="/trajectory_publish_rate" value="20.0" />
  </node>

  <!-- 3D uncertainty map -->
  <node pkg="octomap_server" type="octomap_uncertainty_server_node" name="octomap_server">
    <remap from="cloud_in" to="/camera/depth/color/points" />

    <param name="frame_id" type="string" value="world" />
    <param name="base_frame_id" type="string" value="camera_link" />
    <param name="height_map" value="false" />
    <param name="colored_map" value="false" />
    <param name="uncertainty_map" value="true" />
    <param name="occupied_only_uncertainty" value="true" />
    <param name="resolution" value="0.1" />
    <param name="sensor_model/max_range" value="4.0" />
    <param name="sensor_model/min_range" value="0.5" />
    <param name="color/r" value="0.0" />
    <param name="color/g" value="0.0" />
    <param name="color/b" value="1.0" />
    <param name="color/a" value="1.0" />
    <param name="publish_free_space" value="false" />
    <param name="color_free/r" value="0.0" />
    <param name="color_free/g" value="1.0" />
    <param name="color_free/b" value="0.0" />
    <param name="color_free/a" value="1.0" />
  </node>

  <!-- Visualization - RViz-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find aslam_bringup)/rviz/handheld_3d_slam.rviz" output="screen" />
  
</launch>
